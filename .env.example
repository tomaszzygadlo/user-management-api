APP_NAME="User Management API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=user_management
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration
# For production SMTP: Configure these values with your SMTP provider details
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host.com
MAIL_PORT=465
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS="your-email@domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# For development/testing (logs emails instead of sending):
# MAIL_MAILER=log

# API Configuration
API_PREFIX=api
API_VERSION=v1
API_RATE_LIMIT=60


# Redis Configuration (optional, only if using Redis)
# REDIS_CLIENT=predis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
